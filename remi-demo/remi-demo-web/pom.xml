            <!--            <include>**/*.yml</include>-->
            <!--        </includes>-->
            <!--    </resource>-->
            <!--    <resource>-->
            <!--        <directory>src/main/resources</directory>-->
            <!--    </resource>-->
            <!--</resources>-->
        </plugins>
    </build>

</project>
